<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.thomasmars.testapp.MainActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_width="110dp"
                android:layout_height="170dp"
                android:text="Forward"
                android:id="@+id/F" android:layout_gravity="center_horizontal|top"/>
        <Button
                android:layout_width="305dp"
                android:layout_height="108dp"
                android:text="Exit!"
                android:id="@+id/EXIT" android:layout_gravity="center_horizontal|bottom"/>
        <Button
                android:layout_width="110dp"
                android:layout_height="172dp"
                android:text="Forward Left"
                android:id="@+id/F_L" android:layout_gravity="left|top"/>
        <Button
                android:layout_width="109dp"
                android:layout_height="170dp"
                android:text="Forward right"
                android:id="@+id/F_R" android:layout_gravity="right|top"/>
        <Button
                android:layout_width="111dp"
                android:layout_height="161dp"
                android:text="BACKWARD LEFT"
                android:id="@+id/B_L" android:layout_gravity="left|center_vertical"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="165dp"
                android:text="BACKWARD"
                android:id="@+id/B" android:layout_gravity="center"/>
        <Button
                android:layout_width="110dp"
                android:layout_height="165dp"
                android:text="BACKWARD RIGHT"
                android:id="@+id/B_R" android:layout_gravity="right|center_vertical"/>
    </FrameLayout>
</RelativeLayout>

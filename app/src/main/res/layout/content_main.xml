<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context="com.example.thomasmars.testapp.MainActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_width="125dp"
                android:layout_height="170dp"
                android:text="Forward"
                android:id="@+id/button" android:layout_gravity="center_horizontal|top"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="152dp"
                android:text="Asdf"
                android:id="@+id/button2" android:layout_gravity="center_horizontal|bottom"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:text="DRIVE!!"
                android:id="@+id/button3" android:layout_gravity="left|center_vertical"/>
    </FrameLayout>
</RelativeLayout>
